<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<!-- <?import com.mmm.grenway.javafx.controller.helper.TextFieldValidatable?> -->


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="com.mmm.grenway.javafx.controller.DocumentController">
   <center>
      <TableView fx:id="docsTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="%main.tab.admin.doc.name" />
          <TableColumn fx:id="priceColumn" prefWidth="75.0" text="%main.tab.admin.doc.price" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <top>
      <GridPane hgap="10.0" BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="70.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" percentWidth="20.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" percentWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="nameField" promptText="%main.tab.admin.doc.name.promt" />
            <TextField fx:id="priceField" promptText="%main.tab.admin.doc.price.promt" GridPane.columnIndex="1" />
            <Button mnemonicParsing="false" text="%main.tab.admin.doc.button.add" GridPane.columnIndex="2" onAction="#addNewDocument"/>
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </GridPane>
   </top>
</BorderPane>
