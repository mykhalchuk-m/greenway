<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mmm.grenway.javafx.controller.EditUserController">
   <center>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="%main.tab.admin.edit.username" />
            <Label text="%main.tab.admin.edit.password" GridPane.rowIndex="1" />
            <Label text="%main.tab.admin.edit.role" GridPane.rowIndex="2" />
            <Label text="%main.tab.admin.edit.accountNonExpired" GridPane.rowIndex="3" />
            <Label text="%main.tab.admin.edit.accountNonLocked" GridPane.rowIndex="4" />
            <Label text="%main.tab.admin.edit.credentialsNonExpired" GridPane.rowIndex="5" />
            <TextField fx:id="userNameFiled" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="roleField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <CheckBox fx:id="accountNonExpiredField" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <CheckBox fx:id="accountNonLockedField" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <CheckBox fx:id="credentialsNonExpiredField" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <CheckBox fx:id="enabledField" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label text="%main.tab.admin.edit.enabled" GridPane.rowIndex="6" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
               <children>
                  <Button mnemonicParsing="false" onAction="#editUser" text="%main.tab.admin.edit.button.save" />
                  <Button mnemonicParsing="false" onAction="#deleteUser" text="%main.tab.admin.edit.button.delete" />
                  <Button mnemonicParsing="false" onAction="#cancel" text="%main.tab.admin.edit.button.cancel" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
