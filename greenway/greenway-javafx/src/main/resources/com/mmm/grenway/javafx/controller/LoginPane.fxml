<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mmm.grenway.javafx.controller.LoginController">
   <center>
      <GridPane alignment="CENTER" maxHeight="150.0" maxWidth="200.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="userName" promptText="%login.textFiled.userName.promptText" />
            <PasswordField fx:id="password" promptText="%login.textFiled.password.promptText" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="login" mnemonicParsing="false" text="%login.button.login.test" />
               </children>
            </HBox>
            <Label fx:id="errorMessage" text="" GridPane.columnSpan="2" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
